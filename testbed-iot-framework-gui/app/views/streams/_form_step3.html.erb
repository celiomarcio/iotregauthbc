<div class="step" id="step-3">
  <div class="form-group">
    <label>Mechanism for updating data values</label><br>
    <%= f.check_box :polling, class: "form-control switch-polling clearfix", checked: !@stream.polling %>
  </div>

  <div class="polling" style="display: none;">
    <div class="form-group">
      <%= f.label :uri, class: "left" %>
      <label class="explanation">Which URL will be used to poll data points from?</label>
      <div class="input-group left">
        <%= f.text_field :uri, class: "form-control input clearfix", placeholder: "e.g: http://example.com/temperature/uppsala" %>
        <span class="input-group-btn">
          <button class="btn btn-default btn-preview" type="button">Preview!</button>
        </span>
      </div>
    </div>

    <div>
      <div class="left col-md-6">
        <label class="left" >Data preview</label><br>
        <textarea id="preview-area" class="form-control" rows="8"></textarea>
      </div>

      <div class="right col-md-6">
        <div class="form-group">
          <%= f.label :data_type, class: "left" %>
          <label class="explanation">Provided by your stream</label>
          <%= f.select :data_type, [["Json", "application/json"]], {}, { :class => 'form-control input clearfix' } %>
        </div>
        <div class="form-group">
          <%= f.label :parser, class: "left" %>
          <label class="explanation">Path to the value</label>
          <%= f.text_field :parser, class: "form-control input clearfix", placeholder: "e.g: main/temp" %>
        </div>
        <div class="form-group">
          <%= f.label :polling_freq, "Polling Frequency", class: "left" %>
          <!--<label class="explanation">Interval for polling the stream</label>-->
          <div class="input-group clearfix">
            <span class="input-group-addon" style="padding: 9px 9px; width: 0.9em;">Once every</span>
            <span class="input-group-addon" style="padding: 0px 0px; height: 1.0em;"><%= f.text_field :polling_freq, class: "form-control input", placeholder: "e.g: 30" %></span>
            <span class="input-group-addon" style="padding: 9px 9px; width: 0.75em;">seconds</span>
          </div>
        </div>
      </div>

    </div>
    <div class="clearfix"></div>
  </div>
</div>
